@model CarDealership.UI.Models.NewCustomerVM
@{
    ViewBag.Title = "NewAccount";
}

<h2>New Account</h2>
<div class="panel">
    @using (Html.BeginForm("NewAccount", "Customer", FormMethod.Post))
    {
        @Html.HiddenFor(m => m.CarId)
        <div class="form-group">
            <label>Name:</label>
            @Html.TextBoxFor(m => m.Name)
        </div>
        <div class="form-group">
            <label>Phone:</label>
            @Html.TextBoxFor(m => m.Phone)
        </div>
        
        <div class="form-group">
            @Html.TextBoxFor(m => m.Email)
        </div>
        <button type="submit">Create Account</button>
    }
    </div>

