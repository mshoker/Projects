@model HRPortal.Models.EmployeeVM
@{
    ViewBag.Title = "EmployeeInfo";
}

<h2>Employee Info</h2>
@Html.ActionLink("Back", "List", "Company")
<div class="row">
    <table class="table table-striped">
        <thead>
            <th>Name</th>
            <th>Phone</th>
            <th>Title</th>
            <th>Hire Date</th>
            <th></th>
        </thead>
        <tbody>
        @foreach (var employee in Model.Employees)
        {
            <tr>
                <td>@employee.FirstName @employee.LastName</td>
                <td>@employee.Phone</td>
                <td>@employee.Job.Title</td>
                <td>@employee.HireDate.ToShortDateString()</td>
                <td>@Html.ActionLink("See Work History", "WorkHistory", "Company", new {compId = @employee.Employer.CompanyId, empId = @employee.Id}, null)</td>
            </tr>
        }
        </tbody>
    </table>
</div>

