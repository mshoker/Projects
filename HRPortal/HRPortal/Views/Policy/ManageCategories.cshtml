@using System.ServiceModel.Syndication
@model HRPortal.Models.PolicyCategoryVM
@{
    ViewBag.Title = "ManageCategories";
}

<h2>Manage Categories</h2>
<div class="row">
    <div class="col-xs-12">
        @Html.ActionLink("Add Category", "AddCategory", "Policy", new {origin = "newCategory"}, null)
        @Html.ActionLink("Back", "ManagePolicies")
    </div>
</div>
<div class="row">
    <div class="col-xs-12">
        <table class="table table-striped" style="width: auto">
            <thead>
                <tr>
                    <td>Categories</td>
                    <th></th>
                </tr>
            </thead>
            <tbody>
            @for(int i = 0; i < Model.Categories.Count; i++)
            {
                <tr>
                    <td>@Model.Categories[i].Text</td>
                    <td>
                        @Html.ActionLink("Edit", "EditCategory", "Policy", new {editCategory = Model.Categories[i].Text}, null) |
                        @Html.ActionLink("Delete", "DeleteCategory", "Policy", new { deleteCategory = Model.Categories[i].Text }, null)
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>

